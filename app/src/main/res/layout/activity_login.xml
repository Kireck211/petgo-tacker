<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.iteso.petgo.ActivityLogin">


    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/download"
        android:contentDescription="@string/login_description"/>

    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/iv_login"
        android:layout_marginTop="10dp"
        android:text="@string/app_title"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/iv_login"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_login">

        <Button
            android:id="@+id/btn_facebook_activity_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_btn_separator_activity_login"
            android:layout_marginBottom="@dimen/margin_spacing_buttons"
            android:background="@color/facebook_login"
            android:text="@string/login_with_facebook"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/v_btn_separator_activity_login"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_google_activity_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_btn_separator_activity_login"
            android:layout_marginTop="@dimen/margin_spacing_buttons"
            android:background="@color/google_login"
            android:text="@string/login_with_google"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>
</layout>
